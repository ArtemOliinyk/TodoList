v-layout(column)
    v-form(ref="form" v-model="isFormValid" lazy-validation)
        v-flex.pa-0
            v-text-field(v-model.trim="title" :rules="titleRules" label="Title*" :counter="20" required)
            v-textarea(v-model.trim="task" :rules="taskRules" label="Task*" :counter="100"  hint="Hint text" required)